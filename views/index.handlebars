

<div class="container text-center"> 
  <img src="static/css/burger.jpg">
  <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4"><h1>Eat Da Burger</h1>
           <form method="POST" action="/newBurger/create" class="create-form">
            <div class="form-group">
              <label for="auth">New Burger:</label>
            {{!--   this name has to correspond the the req.body.burger_name in the server--}}
              <input type="text" id="burger_name" name="name">
              <p>Enter the name of the burger you want</p>
              <button type="submit" id = addBurger>Submit Burger</button>
            </div>
           </form> 
      </div>
      <div class="col-md-4"></div>
  </div> 
  <div class="row">
      <div class="col-md-4 ">
        <h1>Burgers to Eat</h1>
           {{#each burgers}}
             {{#unless this.devoured}}
              <li>
                <p>
                  {{this.id}}. {{this.name}}

                  <form id="devourBurger" action="/update?_method=PUT" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit" id="eatBurger">Devour It!</button>
                  </form>
                </p>
              </li>
            {{/unless}}
          {{/each}}
      </div>
    <div class="col-md-4">  
    </div>
    <div class="col-md-4">
      <h1>Devoured Burgers!</h1>
        <ul>
            {{#each burgers}}
              {{#if this.devoured}}
                <li>
                  <p>
                    {{this.id}}. {{this.name}}
                      <form id="devouredBurgers" action="/delete?_method=DELETE" method="POST">
                        <div class="input-group">
                          <input type="hidden" class="form-control" name="id" value="{{this.id}}">
                          <span class="input-group-btn">
                            <button class="btn btn-default" type="submit" id="deleteBurger">Im Stuffed!</button>
                          </span>
                        </div>
                      </form>
                  </p>    
                </li>
            {{/if}}
          {{/each}}
        </ul> 
    </div>
</div>




